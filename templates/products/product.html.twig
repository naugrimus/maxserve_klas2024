{% block body %}
    <h1>Product details</h1>

    <div>

        <table>

            <tbody>

            <tr>

                <td><img width="100" height="100" alt="{{ product.thumbnail }}" src="{% if (local_images == 'true') %}{{ product.thumbnaillocal }}{% else %} {{ product.thumbnail }} {% endif %}"></td>
            </tr>
                <tr>
                    <td>title</td>
                    <td>{{ product.title }}</td>
                </tr>
                <tr>
                    <td>description</td>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <td>categoru</td>
                    <td>{{ product.category.category }}</td>
                </tr>
                <tr>
                    <td>rating</td>
                    <td>{{ product.brand.brand }}</td>
                </tr>
                <tr>
                    <td>rating</td>
                    <td>{{ product.rating }}</td>
                </tr>
                <tr>
                    <td>dimensions</td>
                    <td>
                        width: {{ product.width }} <br />
                        height: {{ product.height }} <br />
                        depth: {{ product.depth }}<br />
                    </td>
                </tr>
                <tr>
                    <td>price</td>
                    <td>
                        {{ product.price|format_currency('EUR') }}
                    </td>
                </tr>

                <tr>
                    <td>discountPercentage</td>
                    <td>
                        {{ product.discountPercentage }}
                    </td>
                </tr>
                <tr>
                    <td>discounted price</td>
                    <td>
                        {{ product.discountPrice|format_currency('EUR') }}
                    </td>
                </tr>




            </tbody>
        </table>
        <div style="float:left; width:600px">
            <table>
                {% for image in product.productimages %}
                    <tr>

                        <td><img width="150" height="150" alt="{{ image.url }}" src="{% if (local_images == 'true') %}{{ image.local }}{% else %} {{ image.url }} {% endif %}"></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    <div style="float:left; width:600px">
        <table>
            {% for review in product.reviews %}
                <tr>
                    <td>{{ review.name }}</td>
                    <td>{{ review.email }}</td>
                    <td>{{ review.rating }}</td>
                    <td>{{ review.reviewdate|date('Y-m-d H:i:s')  }}</td>
                </tr>
                <tr>
                    <td colspan="4">
                        {{ review.comment }}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>



        </table>
    </div>

{% endblock %}